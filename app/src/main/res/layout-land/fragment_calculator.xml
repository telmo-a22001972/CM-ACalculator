<?xml version="1.0" encoding="utf-8"?>

<!-- Cria várias linhas -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Visor -->
    <TextView
        android:id="@+id/text_visor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:padding="16dp"
        android:textSize="40sp"
        android:text="0"
        />

    <!-- Cria várias colunas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <!-- Vai criar 10 espaços -->
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <!-- Atribuir 2 dos 10 espaços -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_history"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
            <!-- Atribuir 8 dos 10 espaços -->
            <!-- O teclado tem 4 linhas -->
            <LinearLayout
                android:layout_weight="8"
                android:weightSum="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Vai criar 5 espaços -->
                <LinearLayout
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:orientation="horizontal">


                <!-- Atribui 1 dos 5 espaços -->
                    <Button
                        android:id="@+id/button_clear"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/greyLight"
                        android:text="C" />


                    <Button
                        android:id="@+id/button_backspace"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/greyLight"
                        android:text="r" />

                    <Button
                        android:id="@+id/button_division"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/orange"
                        android:text="/" />

                    <Button
                        android:id="@+id/button_multiplication"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/orange"
                        android:text="*" />


                </LinearLayout>

                <!-- Vai criar 5 espaços -->
                <LinearLayout
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:orientation="horizontal">

                    <!-- Atribui 1 dos 5 espaços -->
                    <Button
                        android:id="@+id/button_7"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/greyDark"
                        android:text="7" />

                    <Button
                        android:id="@+id/button_8"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/greyDark"
                        android:text="8" />

                    <Button
                        android:id="@+id/button_9"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/greyDark"
                        android:text="9" />

                    <Button
                        android:id="@+id/button_subtraction"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/orange"
                        android:text="-" />

                </LinearLayout>

                <!-- Vai criar 5 espaços -->
                <LinearLayout
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:orientation="horizontal">

                    <!-- Atribui 1 dos 5 espaços -->
                    <Button
                        android:id="@+id/button_4"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/greyDark"
                        android:text="4" />

                    <Button
                        android:id="@+id/button_5"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/greyDark"
                        android:text="5" />

                    <Button
                        android:id="@+id/button_6"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/greyDark"
                        android:text="6" />

                    <Button
                        android:id="@+id/button_adition"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/orange"
                        android:text="+" />

                </LinearLayout>

                <!-- Vai criar 5 espaços -->
                <LinearLayout
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:orientation="horizontal">

                    <!-- Atribui 1 dos 5 espaços -->

                    <Button
                        android:id="@+id/button_1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/greyDark"
                        android:text="1" />

                    <Button
                        android:id="@+id/button_2"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/greyDark"
                        android:text="2" />

                    <Button
                        android:id="@+id/button_3"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/greyDark"
                        android:text="3" />

                    <Button
                        android:id="@+id/button_equals"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/orange"
                        android:text="=" />

                </LinearLayout>

                <!-- Vai criar 5 espaços -->
                <LinearLayout
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:orientation="horizontal">

                    <!-- Atribui 1 dos 5 espaços -->

                    <Button
                        android:id="@+id/button_0"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/greyDark"
                        android:text="0" />

                    <Button
                        android:id="@+id/button_comma"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:backgroundTint="@color/greyDark"
                        android:text="." />

                </LinearLayout>





                </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

